generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  name        String?
  phoneNumber String?  @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String
  subtitle  String
  price     String
  imageSrc  String
  imageAlt  String
  tone      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
